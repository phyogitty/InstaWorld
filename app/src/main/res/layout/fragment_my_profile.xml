<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/llBio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivSilhoutte"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="25dp"
            android:src="@drawable/profileplaceholder" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="match_parent"
            android:textColor="@color/design_default_color_primary_dark"
            android:layout_height="120dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="25dp"
            android:gravity="center_vertical"
            android:textSize="24sp"
            tools:text="First Last" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvUploadProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:text="+ Upload Profile" />


    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/colorPrimary"
        android:text="TextView"
        android:textSize="0.5sp" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/listGridNavBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:menu="@menu/grid_scroll" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:text="TextView"
        android:textSize="0.5sp" />

    <FrameLayout
        android:id="@+id/flMyPosts"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>

</LinearLayout>